{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=;Port=3306;Database=InvoicesMgr;Uid=;Pwd=;" //This is the connection string to the database, must be an MySQL / MariaDB database
  },
  "JwtKeys": {
    "SymmetricSecurityKey": "", // Symmetric security key for JWT
    "Issuer": "", // Issuer of the JWT
